{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "packages/orbit-core/src/index.ts",
    "packages/orbit-evm/src/index.ts",
    "packages/orbit-solana/src/index.ts",
    "packages/satellite-core/src/index.ts",
    "packages/satellite-evm/src/index.ts",
    "packages/satellite-solana/src/index.ts"
  ],
  "entryPointStrategy": "expand",
  "tsconfig": "tsconfig.json",
  "plugin": ["typedoc-plugin-markdown", "typedoc-plugin-react"],
  "out": "apps/docs/src/content/apiReference",
  "readme": "none",
  "githubPages": false,
  "hideGenerator": true,
  "cleanOutputDir": true,
  "categorizeByGroup": true,
  "hideBreadcrumbs": true,
  "pageTitleTemplates": {
    "member": "{name}"
  }
}
